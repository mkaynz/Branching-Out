<head>
<style>
body {
  background-color: green;
}
</style>
</head>

<h1>Add New Comment ✏️</h1>

<%= bootstrap_form_with model: @comment, method: :post, url: post_comments_path(@post), local: true do |f| %>

  <%= f.text_field :body %>
  <%= f.submit %>

<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', post_comments_path(@post), class: 'btn btn-secondary' %>
</p>