<head>
<style>
body {
  background-color: green;
}
</style>
</head>


<h1><center> Create New Blog Post ✏️</center> </h1>

<%= bootstrap_form_with model: @post, url: posts_path(@post), method: :post, local: true do |f| %>

    <%= f.text_field :title %>
    <%= f.text_area :description %>
    <%= f.submit %>

<% end %>

<p class= "mt-3">
<%= link_to 'Cancel', posts_path, class: 'btn btn-secondary' %>
</p>