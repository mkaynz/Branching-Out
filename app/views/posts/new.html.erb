<h1><center> Create New Blog Post </center> </h1>

<%= bootstrap_form_with model: @post, url: posts_path, method: :post, local: true do |f| %>

    <%= f.text_field :title %>
    <%= f.text_area :description %>
    <%= f.submit %>

<% end %>

<%= link_to 'Cancel', posts_path, class: 'btn btn-primary' %>